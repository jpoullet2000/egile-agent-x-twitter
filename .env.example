# =============================
# AGENT MODEL KEYS (one required)
# =============================
# Choose one provider for the agent brain
XAI_API_KEY=your_xai_api_key_here
OPENAI_API_KEY=your_openai_api_key_here
MISTRAL_API_KEY=your_mistral_api_key_here

# Optional: model overrides
OPENAI_MODEL=gpt-4o-mini
XAI_MODEL=grok-4-1-fast-reasoning
MISTRAL_MODEL=mistral-large-2512

# =============================
# MCP SERVER SETTINGS
# =============================
# MCP for X Post Creator (default port 8002)
MCP_HOST=localhost
MCP_PORT=8002

# AgentOS API port
AGENTOS_PORT=8000

# =============================
# X / TWITTER PUBLISHING KEYS (required to publish)
# =============================
X_API_KEY=your_x_api_key_here
X_API_SECRET=your_x_api_secret_here
X_ACCESS_TOKEN=your_x_access_token_here
X_ACCESS_TOKEN_SECRET=your_x_access_token_secret_here

# =============================
# LLM KEYS FOR MCP SERVER (better post generation)
# =============================
ANTHROPIC_API_KEY=your_anthropic_api_key_here
OPENAI_API_KEY_MCP=your_openai_api_key_here

# =============================
# OPTIONAL SETTINGS
# =============================
DEFAULT_MAX_LENGTH=280
INCLUDE_HASHTAGS=true
